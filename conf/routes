# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

GET      /api/employee/get                  controllers.EmployeeController.getEmployees
GET      /api/employee/get/:id              controllers.EmployeeController.getEmployee(id: String)

POST     /api/employee/post                 controllers.EmployeeController.createEmployee(request: Request)

PUT      /api/employee/put/:id              controllers.EmployeeController.updateEmployee(id: String, request: Request)
DELETE   /api/employee/delete/:id           controllers.EmployeeController.deleteEmployee(id: String)
